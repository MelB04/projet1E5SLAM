{% extends "layout.html.twig" %}

{% block title %}
    Simpleduc
{% endblock %}

{% block content %}
    <div class="container mb-5">
        <h1 class="text-dark">
            Simpleduc
        </h1>
        <h2 class="text-dark py-4">Affichage des entreprises sous forme de Tableau</h2>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Entreprise</th>
                <th scope="col">Contact</th>
                <th scope="col">Modifier le contact ?</th>
                <th scope="col">Supprimer le contact ?</th>
              </tr>
            </thead>
            <tbody>
                {% for ligne in entreprise %}
                <tr>
                    <th scope="row">{{ ligne.IDEntre }}</th>
                    <td>{{ ligne.NomEntreprise }}</td>
                    <td>{{ ligne.NomContact }}</td>
                    <td><a href="?page=updateContact&idEntreprise={{ ligne.IDEntre }}&idContact={{ ligne.IDPersonne }}">Modifier le contact ?</a></td>
                    <td><a href="?page=deleteContact&idEntreprise={{ ligne.IDEntre }}&idContact={{ ligne.IDPersonne }}">Supprimer le contact ?</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}