{% extends "layout.html.twig" %}

{% block title %}
    Simpleduc
{% endblock %}

{% block content %}
    <div class="container mb-5">
        <h1 class="text-dark">
            Simpleduc
        </h1>
        <h2 class="text-dark py-4">Affichage des Contrats sous forme de Tableau</h2>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">DateSignature</th>
                <th scope="col">Cout Global</th>
                <th scope="col">Date de Début</th>
                <th scope="col">Date de Fin</th>
                <th scope="col">Contact</th>
                <th scope="col">Entreprise</th>
                <th scope="col">Modifier ?</th>
              </tr>
            </thead>
            <tbody>
                {% for contrat in contrats %}
                <tr>
                    <th scope="row">{{ contrat.IDContrat }}</th>
                    <td>{{ contrat.DateSignature  | date("d-m-Y") }}</td>
                    <td>{{ contrat.CoutGlobal }}</td>
                    <td>{{ contrat.DateDebut  | date("d-m-Y") }}</td>
                    <td>{{ contrat.DateFin  | date("d-m-Y")}}</td>
                    <td>{{ contrat.NomContact }}</td>
                    <td>{{ contrat.NomEntreprise }}</td>
                    <td><a href="?page=updateContrat&id={{ contrat.IDContrat }}">Modifier ?</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>




        <!---->


        <h2 class="text-dark py-4">Affichage des entreprises sous forme de Tableau</h2>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Entreprise</th>
                <th scope="col">Modifier ?</th>
              </tr>
            </thead>
            <tbody>
                {% for entreprise in entreprises %}
                <tr>
                    <th scope="row">{{ entreprise.IDEntre }}</th>
                    <td>{{ entreprise.Nom }}</td>
                    <td><a href="?page=updateEntreprise&id={{ entreprise.IDEntre }}">Modifier ?</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <h2 class="text-dark py-4">Affichage des Contacts sous forme de Tableau</h2>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Modifier ?</th>
              </tr>
            </thead>
            <tbody>
                {% for contact in contacts %}
                <tr>
                    <th scope="row">{{ contact.IDPersonne }}</th>
                    <td>{{ contact.Nom }}</td>
                    <td><a href="?page=updateContact&id={{ contact.IDPersonne }}">Modifier ?</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>


        <h2 class="text-dark py-4">Affichage des Développeurs sous forme de Tableau</h2>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Indice</th>
                <th scope="col">Modifier ?</th>
              </tr>
            </thead>
            <tbody>
                {% for dev in devs %}
                <tr>
                    <th scope="row">{{ dev.IDPersonne }}</th>
                    <td>{{ dev.NomPersonne }}</th>
                    <td>{{ dev.CoutHoraire }}</td>
                    <td><a href="?page=updateDev&id={{ dev.IDPersonne }}">Modifier ?</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>


    </div>
{% endblock %}