{% extends "layout.html.twig" %}

{% block title %}
    Page Supprimer un Contrat
{% endblock %}

{% block content %}
<div class="bg-light rounded px-3 py-3">
    <div class="container">
        <h1>Supprimer un Contrat</h1>
    </div>
</div>
<div class="container mb-5">
    <form action="index.php?page=delContrat" method="POST">
        <div class="mb-3">
            <label for="ContratLabel" class="form-label">Choisir une Contrat à supprimer :</label>
            <div>
                <select class="form-select" name="Contrat" size="1">                    
                    {% for contrat in contrats %}
                        <option value={{ contrat.IDContrat }}>{{ contrat.DateSignature }} avec {{ contrat.NomContact }} comme contact pour {{ contrat.NomEntreprise }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div align="center">
            <button type="submit" class="btn btn-primary" name="btnDelContrat" href="">Supprimer un Contrat</button>
        </div> 
    </form>


    <form action="index.php?page=delContrat" method="POST">
        <div class="mb-3">
            <label for="ContratLabel" class="form-label">Choisir plusieurs Contrats à supprimer :</label>
            <div>
                {% for contrat in contrats %}
                    <input type="checkbox" name="contrat[]" value={{ contrat.IDContrat }}> {{ contrat.DateSignature }} avec {{ contrat.NomContact }} comme contact pour {{ contrat.NomEntreprise }}<br>
                {% endfor %}
            </div>
        </div>
        <div align="center">
            <button type="submit" class="btn btn-primary" name="btnDelPlusieursContrats" href="">Supprimer Plusieurs Contrats</button>
        </div> 
    </form>
</div>
{% endblock %}