{% extends "layout.html.twig" %}

{% block title %}
    Page Modification de l'outil
{% endblock %}

{% block content %}
<div class="bg-light rounded px-3 py-3">
  <div class="container">

    {% if Outil == NULL %}
      <h1>L'outil n'existe pas</h1>
    {% else %}
      <h1>Modifier l'outil</h1>
    {% endif %}
  </div>
</div>
<div class="container mb-5"> 
  {% if Outil != NULL %}
  
  <form action="index.php?page=updateOutil&id={{ Outil.IDOutil }}" method="POST">
    <div class="mb-3">
        <label for="OutilLabel" class="form-label"> Libelle</label>
        <input type="text" class="form-control" id="OutilLabel" name="OutilLabel" value="{{Outil.Libelle}}" >
    </div>

    <div class="mb-3">
        <label for="OutilVersion" class="form-label"> Version</label>
        <input type="text" class="form-control" id="OutilVersion" name="OutilVersion" value="{{Outil.Version}}" >
    </div>
    <button type="submit" class="btn btn-primary" name="btnUpdOutil"> Modifier l'outil</button>
    </form>
  {% endif %}       
</div>
{% endblock %}
